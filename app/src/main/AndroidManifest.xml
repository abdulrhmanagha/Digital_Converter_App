<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="agha.digitalconverter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_main"
        android:label="Digital Converter"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash" android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LandingPage"
            android:label="@string/title_activity_landing_page"
            android:theme="@style/AppTheme"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".Info" android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>